<%= form_for :question, url: questions_path  do |f| %>
<div class="container">
		<div class="col-md-8">
		  <p>
		    <%= f.label :title %>
		    <%= f.text_field :title %>
		  </p>
		</div>
		
		<div class="col-md-10">
		  <p>
		    <%= f.label :description %><br>
		    <%= f.text_area :description %>
		  </p>
		</div>
	
		<div class="radio-inline col-md-10">
	  <p>
		    <%= f.radio_button :theme, 1 %> <%= f.label :theme_1, 'Readable' %>
		    <%= f.radio_button :theme, 2 %> <%= f.label :theme_2, 'Speed' %>
		    <%= f.radio_button :theme, 3 %> <%= f.label :theme_3, 'Number of lines' %>
		    <%= f.radio_button :theme, 4 %> <%= f.label :theme_4, 'Recyclable' %>
	  </p>
		</div>
	

	
	  <p>
	    <%= f.label :code %>
	    <%= f.text_area :code %>
	  </p>
	  
	  <p>
	    <%= f.submit %>
	  </p>
	</div>
<% end %>

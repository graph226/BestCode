<%= form_for :question, url: questions_path do |f| %>
    <div class="container" style="margin-top: 60px;">
        <h1>質問を入力してください！</h1>
		  <p>
		    <%= f.label :title ,id:"hoge"%>
		    <%= f.text_field :title , class:"form-control col-md-6", rows:"1"%>
		  </p>
		
			<div class="form-group">
		  <p>
		    <%= f.label :description %><br>
		    <%= f.text_area :description, class:"form-control col-md-10"%>
		  </p>
			</div>
	
	  <p>
		    <%= f.radio_button :theme, 'Readable' %> <%= f.label :theme_1, 'Readable' %>
		    <%= f.radio_button :theme, 'Speed' %> <%= f.label :theme_2, 'Speed' %>
		    <%= f.radio_button :theme, 'Number of lines' %> <%= f.label :theme_3, 'Number of lines' %>
		    <%= f.radio_button :theme, 'Recylable' %> <%= f.label :theme_4, 'Recyclable' %>
	  </p>
	

	
	  <p>
	    <%= f.label :code %>
	    <%= f.text_area :code, class:"form-control col-md-10", rows:"10" %>
	  </p>
	  
	  <p>
	    <%= f.submit %>
	  </p>
</div>
<% end %>
